<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.github.fellowship_of_the_bus.draconia"
  android:versionCode="1"
  android:versionName="1.0">
  <application
    android:icon="@drawable/ahmed"
    android:label="Draconia"
    android:hardwareAccelerated="false">

    <activity android:label="Draconia" android:name="BattleActivity" android:screenOrientation="landscape">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
  </application>

  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

  <uses-sdk android:minSdkVersion="16"/>
</manifest>

